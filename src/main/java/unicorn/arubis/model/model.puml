    +setTipoNotificacion(String tipoNotificacion)
}

class Room {
    +id: String
    +nombre: String
    +esFisica: boolean
    +disponible: char
    +capacidad: int
    +tieneProyector: boolean
    +getId(): String
    +getNombre(): String
    +isEsFisica(): boolean
    +getDisponible(): char
    +getCapacidad(): int
    +isTieneProyector(): boolean
    +setCapacidad(int capacidad)
    +setTieneProyector(boolean tieneProyector)
    +setTipo(char tipo)
    +setDisponible(char estado)
